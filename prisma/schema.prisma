generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  surname   String?
  email     String   @unique
  password  String
  role      String   @default("user")
  status    String   @default("active")
  createdAt DateTime @default(now())
}

model Author {
  id      Int    @id @default(autoincrement())
  name    String
  country String
}

model Publisher {
  id      Int    @id @default(autoincrement())
  name    String
  country String
}
